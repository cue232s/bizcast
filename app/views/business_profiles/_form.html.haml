= form_for @business_profile do |f|
  - if @business_profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@business_profile.errors.count, "error")} prohibited this business_profile from being saved:"
      %ul
        - @business_profile.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :business_name
    = f.text_field :business_name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :zipcode
    = f.text_field :zipcode
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :country_code
    = f.text_field :country_code
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
