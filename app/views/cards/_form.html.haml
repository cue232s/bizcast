= form_for @card, :html => { :multipart => true} do |f|
  - if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, "error")} prohibited this card from being saved:"
      %ul
        - @card.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :business_name
    = f.text_field :business_name
  .field
    = f.label :message_title
    = f.text_field :message_title
  .field
    = f.label :message_description
    = f.text_area :message_description
  .field
    = f.file_field :photo
  .actions
    = f.submit 'Save'
